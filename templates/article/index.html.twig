{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <article>
        <h1>{{ article.title }}</h1>
        <small>by {{ article.author.name }} / {{ article.createdAt|date('d.m.Y') }}</small>
        <p>{{ article.text }}</p>
    </article>

    <div>
        <ul>
            {% include "comment/comment.html.twig" with {'comments': article.rootComments} %}
        </ul>
    </div>
{% endblock %}
